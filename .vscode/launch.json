  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests",
      "cargo": {
        "args": ["test", "--no-run", "--lib", "--package=lsdj"],
        "filter": {
          "name": "lsdj",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug LSDJ Tools – Inspect",
      "cargo": {
        "args": ["build", "--bin=lsdj-tools", "--package=lsdj-tools"],
        "filter": {
          "name": "lsdj-tools",
          "kind": "bin"
        }
      },
      "args": ["inspect", "/Users/stijn/Development/lsdj-rs/test"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug LSDJ Tools – Export",
      "cargo": {
        "args": ["build", "--bin=lsdj-tools", "--package=lsdj-tools"],
        "filter": {
          "name": "lsdj-tools",
          "kind": "bin"
        }
      },
      "args": [
        "export",
        "-p",
        "-v",
        "/Users/stijn/Development/lsdj-rs/test/92L_empty.sav"
      ],
      "cwd": "${workspaceFolder}"
    }
  ]
}
